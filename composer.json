{
    "name": "tsufeki/tenkawa-php-language-server",
    "description": "Language server protocol implementation for PHP",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "tsufeki",
            "email": "tsufeki@ymail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "jetbrains/phpstorm-stubs": "dev-master",
        "phpdocumentor/type-resolver": "0.5.0 as 0.4.0",
        "phpstan/phpstan": "0.9.2",
        "react/child-process": "^0.5",
        "react/promise-stream": "^1.1",
        "recoil/react": "^1.0",
        "tsufeki/blanche-json-rpc": "^0.2.0",
        "tsufeki/hmcontainer": "^0.3",
        "tsufeki/kayo-json-mapper": "^0.3.0",
        "tsufeki/php-lenient-parser": "^0.1",
        "tsufeki/react-filesystem-monitor": "^0.3.0",
        "webmozart/glob": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "phpstan/phpstan-phpunit": "^0.9"
    },
    "autoload": {
        "psr-4": {
            "Tsufeki\\Tenkawa\\": "src/Tsufeki/Tenkawa/"
        },
        "files": [
            "src/Tsufeki/Tenkawa/Php/PhpStan/patch.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Tsufeki\\Tenkawa\\": "tests/Tsufeki/Tenkawa/"
        }
    },
    "bin": ["bin/tenkawa.php"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
